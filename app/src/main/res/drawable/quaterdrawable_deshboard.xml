<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#03102d"/> <!-- Background color for the rectangle -->
            <size android:height="40dp" android:width="11dp"></size>
        </shape>
    </item>


    <item android:width="180dp" android:height="180dp" android:gravity="center" android:top="-100dp" android:left="-80dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Circle color -->

        </shape>
    </item>

</layer-list>
